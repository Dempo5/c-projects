#include <stdio.h>
#include <stdlib.h>

int main () {

char choice;     
int count = 0;    
int *p;
p = malloc(sizeof(int));

if (p == NULL) {
printf("Memory allocation failed\n");
return 1;
}

printf("Enter an integer: ");
scanf("%d", &p[0]);

printf("%d\n", p[0]);
count = 1;

printf("Would you like to add another integer?(y/n)");
scanf(" %c", &choice);


while(choice != 'n') {
switch(choice) {

case 'y':

int *temp = realloc(p, (count + 1) * sizeof(int));
if(temp == NULL) {
    free(p);
    printf("Reallocation failed\n");
return 1;
}
p = temp;

printf("Enter an integer: ");
scanf("%d", &p[count]);
count++;

printf("Would you like to add another integer?(y/n)");
scanf(" %c", &choice);

break;

case 'n':

break;

}
}
for(int i = 0; i < count; i++) {
printf(" %d", p[i]);
}

printf("\nGoodbye!");

free(p);
return 0;

}
