#include <stdio.h>
#include <string.h>

int main(void) {

    char password[100];

    printf("Create a password: ");
    scanf("%99s", password);

    int length = strlen(password);

    int hasUpper = 0;
    int hasLower = 0;
    int hasDigit = 0;
    int hasSpecial = 0;

    // Scan every character and set flags
    for (int i = 0; i < length; i++) {
        char c = password[i];

        if (c >= 'A' && c <= 'Z') {
            hasUpper = 1;
        } else if (c >= 'a' && c <= 'z') {
            hasLower = 1;
        } else if (c >= '0' && c <= '9') {
            hasDigit = 1;
        } else {
            hasSpecial = 1;
        }
    }

    // After the loop, print the results once
    printf("Length >= 8: %s\n", length >= 8 ? "true" : "false");
    printf("Uppercase: %s\n", hasUpper ? "true" : "false");
    printf("Lowercase: %s\n", hasLower ? "true" : "false");
    printf("Digit: %s\n", hasDigit ? "true" : "false");
    printf("Special character: %s\n", hasSpecial ? "true" : "false");

    // Final strength check
    if (length >= 8 && hasUpper && hasLower && hasDigit && hasSpecial) {
        printf("Password strength: STRONG\n");
    } else {
        printf("Password strength: WEAK\n");
    }

    return 0;
}
