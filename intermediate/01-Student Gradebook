#include <stdio.h>

int main () {
    
    int numStudents;

    printf("How many students? ");
    scanf("%d", &numStudents);

    int grades[numStudents];

    // INPUT
    for(int i = 0; i < numStudents; i++) {
        printf("Please type the grade for student %d: ", i);
        scanf("%d", &grades[i]);
    }

    // PRINT
    for(int i = 0; i < numStudents; i++) {
        printf("student %d: %d\n", i, grades[i]);
    }

    // SUM
    float sum = 0;
    for(int i = 0; i < numStudents; i++) {
        sum += grades[i];
    }

    // AVERAGE
    float average = sum / numStudents;
    printf("Average grade: %.2f\n", average);
    
    
    //Highest grade
    int max = grades[0];
    int min = grades[0];
    
    for (int i = 1; i < numStudents; i++) {
    if (grades[i] > max) {
        max = grades[i];
    }
    if (grades[i] < min) {
        min = grades[i];
    }
}
    printf("Your highest grade is %d\n", max);
    printf("Your lowest grade is %d\n", min);

    return 0;
}
