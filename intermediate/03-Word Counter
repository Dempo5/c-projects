#include <stdio.h>
#include <string.h>

int main() {
    char sentence[200];

    printf("Enter a full sentence:\n");
    fgets(sentence, sizeof(sentence), stdin);

    int wordCount = 0;
    int inWord = 0;

    for (int i = 0; sentence[i] != '\0'; i++) {
        char c = sentence[i];

        // TODO: detect when a word starts
        if(c != ' ') {
            if(inWord == 0) {
                wordCount++;
                inWord = 1;
            }
        }
        // TODO: detect when a space resets inWord
        else {
            inWord = 0;
        }
    }

    printf("Word count: %d\n", wordCount);

    return 0;
}
