#include <stdio.h>

int main() {

    int choice;
    double K, C, F;

    while (1) {

        printf("------Temperature Converter Menu-----\n\n");
        printf("1. Celsius to Fahrenheit\n");
        printf("2. Fahrenheit to Celsius\n");
        printf("3. Celsius to Kelvin\n");
        printf("4. Kelvin to Celsius\n");
        printf("5. Quit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        if (choice == 5) {
            printf("Goodbye!\n");
            break;
        }

        switch(choice) {

            case 1:
                printf("-----Celsius to Fahrenheit-----\n");
                printf("Enter the Celsius: ");
                scanf("%lf", &C);

                F = C * 9.0/5.0 + 32;
                printf("The temperature in Fahrenheit is: %.2f\n\n", F);
                break;

            case 2:
                printf("-----Fahrenheit to Celsius-----\n");
                printf("Enter the Fahrenheit: ");
                scanf("%lf", &F);

                C = (F - 32) * 5.0/9.0;
                printf("The temperature in Celsius is: %.2f\n\n", C);
                break;

            case 3:
                printf("-----Celsius to Kelvin-----\n");
                printf("Enter the Celsius: ");
                scanf("%lf", &C);

                K = C + 273.15;
                printf("The temperature in Kelvin is: %.2f\n\n", K);
                break;

            case 4:
                printf("-----Kelvin to Celsius-----\n");
                printf("Enter the Kelvin: ");
                scanf("%lf", &K);

                C = K - 273.15;
                printf("The temperature in Celsius is: %.2f\n\n", C);
                break;

            default:
                printf("Invalid choice. Try again.\n\n");
        }
    }

    return 0;
}
